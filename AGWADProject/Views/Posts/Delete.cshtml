@model AGWADProject.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">

            <div class="card border-0 shadow-sm">

                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirma stergerea anuntului.</h4>
                </div>

                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Esti sigur ca vrei sa stergi anuntul?
                        Actiunea nu poate fi reversibila.
                    </p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-medium">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4 fw-medium">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 fw-medium">Price</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-4 fw-medium">Posted On</dt>
                        <dd class="col-sm-8">@Model.PostedOn.ToShortDateString()</dd>

                        <dt class="col-sm-4 fw-medium">Seller</dt>
                        <dd class="col-sm-8">@Model.Person?.FirstName @Model.Person?.LastName</dd>

                        <dt class="col-sm-4 fw-medium">Car</dt>
                        <dd class="col-sm-8">@Model.Car?.Make @Model.Car?.Model</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-danger px-4">
                                Delete
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
