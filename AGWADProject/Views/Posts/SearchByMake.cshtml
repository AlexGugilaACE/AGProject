@model List<AGWADProject.Models.Post>

<div class="container my-5">

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body text-center">
            <h4 class="fw-semibold mb-3">Caută după marca mașinii</h4>

            <form method="get"
                  asp-action="SearchByMake"
                  class="d-flex justify-content-center gap-2 flex-wrap">

                <input type="text"
                       name="make"
                       class="form-control"
                       placeholder="Tastează marca (ex: BMW, Audi)"
                       style="max-width: 320px;" />

                <button type="submit" class="btn btn-primary px-4">
                    Caută
                </button>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center text-muted shadow-sm">
            Nu s-au găsit rezultate pentru căutarea introdusă.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var post in Model)
            {
                <div class="col-12">
                    <div class="card border-0 shadow-sm">

                        <div class="row g-0">
                            <div class="col-md-3 bg-light d-flex justify-content-center align-items-center">
                                @if (!string.IsNullOrEmpty(post.CoverPhotoPath))
                                {
                                    <img src="@post.CoverPhotoPath"
                                         class="img-fluid rounded-start"
                                         style="max-height: 180px; object-fit: contain;"
                                         alt="Cover Photo" />
                                }
                                else
                                {
                                    <span class="text-muted">No photo</span>
                                }
                            </div>

                            <div class="col-md-6">
                                <div class="card-body">
                                    <h5 class="fw-semibold">@post.Title</h5>
                                    <p class="text-muted small mb-2">
                                        @post.Description
                                    </p>

                                    <p class="mb-1 small">
                                        <strong>Mașină:</strong>
                                        @post.Car?.Make @post.Car?.Model (@post.Car?.Year)
                                    </p>

                                    <p class="mb-0 small">
                                        <strong>Vânzător:</strong>
                                        @post.Person?.FirstName @post.Person?.LastName
                                    </p>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card-body text-md-end h-100 d-flex flex-column justify-content-between">

                                    <div>
                                        <div class="fs-5 fw-bold text-success">
                                            @post.Price.ToString("C")
                                        </div>
                                        <div class="text-muted small">
                                            @post.PostedOn.ToShortDateString()
                                        </div>
                                    </div>

                                    <div class="mt-3">
                                        <a asp-action="Details"
                                           asp-route-id="@post.Id"
                                           class="btn btn-outline-secondary btn-sm">
                                            Vezi detalii
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }

</div>
