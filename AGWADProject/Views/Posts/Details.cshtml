@model AGWADProject.Models.Post

@{
    ViewData["Title"] = "Post Details";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm overflow-hidden">

        @if (!string.IsNullOrEmpty(Model.CoverPhotoPath))
        {
            <div class="bg-light text-center">
                <img src="@Model.CoverPhotoPath"
                     alt="Cover Photo"
                     class="img-fluid w-100"
                     style="max-height: 520px; object-fit: contain;" />
            </div>
        }
        else
        {
            <div class="bg-light text-center text-muted py-5">
                <span>No cover photo available</span>
            </div>
        }

        <div class="card-body p-4 p-lg-5">

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-4">
                <div>
                    <h2 class="fw-semibold mb-1">@Model.Title</h2>
                    <p class="text-muted mb-0">
                        Posted on @Model.PostedOn.ToString("MMMM dd, yyyy")
                    </p>
                </div>

                <div class="mt-3 mt-md-0">
                    <span class="fs-3 fw-bold text-success">
                        @Model.Price.ToString("C")
                    </span>
                </div>
            </div>

            <hr />

            <div class="mb-4">
                <h5 class="fw-semibold mb-2">Description</h5>
                <p class="text-muted">@Model.Description</p>
            </div>

            <div class="row g-4">

                <div class="col-md-6">
                    <div class="border rounded p-3 h-100">
                        <h6 class="fw-semibold mb-3">Seller Information</h6>
                        <dl class="row mb-0 small">
                            <dt class="col-5">Posted by</dt>
                            <dd class="col-7">@Model.Person?.FirstName @Model.Person?.LastName</dd>

                            <dt class="col-5">Phone</dt>
                            <dd class="col-7">@Model.PhoneNumber</dd>
                        </dl>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="border rounded p-3 h-100">
                        <h6 class="fw-semibold mb-3">Vehicle Details</h6>
                        <dl class="row mb-0 small">
                            <dt class="col-5">Car</dt>
                            <dd class="col-7">@Model.Car?.Make @Model.Car?.Model</dd>

                            <dt class="col-5">Transmission</dt>
                            <dd class="col-7">@Model.Car?.TransmissionType?.Name</dd>

                            <dt class="col-5">Fuel</dt>
                            <dd class="col-7">@Model.Car?.FuelType?.Name</dd>
                        </dl>
                    </div>
                </div>

            </div>

            <div class="mt-5 d-flex justify-content-between">
                <a asp-action="Index"
                   class="btn btn-outline-secondary">
                    ← Back to List
                </a>

                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-primary">
                        Edit Post
                    </a>
                }
            </div>

        </div>
    </div>
</div>
